/* miniprogram/pages/cut/cut.wxss */
@import "../../style/guide.wxss";

.ticket{
  margin-top: 10rpx;
  height: 100%;
  width: 100%;
  background: #f6f6f6;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex-wrap:nowrap;
  align-items: center;
  transition: all 300ms ease;
  border-radius: 15px;
}

.cutNow{
  margin-top: 10rpx;
  height: 150px;
  width: 100%;
  background: #f6f6f6;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  /* display: flex; */
  /*flex-direction: row;*/
  align-items: right;
  transition: all 300ms ease;
  border-radius: 15px;
}

.priceText{
  
  font-weight: bold;
  color:#FF7F50;
}
.progress{
  margin: 15px 10px 15px 10px
}
.cutWrapper{
  display: flex;
  justify-content:center;
}

.cut{
 background-color: #FF7F50; /* Green */
