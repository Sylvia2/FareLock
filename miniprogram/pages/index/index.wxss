/**index.wxss**/

page {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
}

.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.ticket {
  width: 100%;
  margin: 10px 0px 10px 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  transition: all 300ms ease;
  /* border-radius: 15px; *//* border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none; */
}

.itemWrapper {
  width: calc(100vw - 80rpx);
  margin: 10px 20px 10px 20px;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  transition: all 300ms ease;
}

.ticketInfo {
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-content: center;
}

.fromToInfo {
  font-weight: bold;
  font-size: 18px;
}

.dateInfo {
  font-size: 15px;
}

.ticketPrice {
  flex: 0 0 auto;
  font-size: 16px;
  margin-right: 10rpx;
  background-color: yellow;
}

.cutButton {
  background-color: #ff7f50; /* Green */
  border: none;
  color: white;
  /* padding: 15px 32px; */
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 0rpx;
}
