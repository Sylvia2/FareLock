/**index.wxss**/
@import "../../style/guide.wxss";

.container {
  width: 100vw;
  height: 100vh;
  margin: 0rpx;
  padding: 0rpx;
  background-color: rgb(246, 246, 246);
  /* flex */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
}

/****************************************/

.userInfo {
  flex: 0 0 auto;
  width: 100vw;
  margin-bottom: 20rpx;
  background-color: rgb(246, 246, 246);
  z-index: 2000;
  box-shadow: 0px 1rpx 25rpx gray;
  /* flex */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  align-items: center;
}

.userAvatar {
  flex: 0 0 auto;
  margin: 20rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.slogan {
  flex: 1 0 auto;
  margin: 20rpx 20rpx 20rpx 0rpx;
}

/****************************************/

.tickets {
  flex: 1 0 300rpx;
  width: 100vw;
  background-color: white;
  /*flex*/
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
}

.ticket {
  flex: 0 0 auto;
  width: 95vw;
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: white;
  box-shadow: 0px 5rpx 30rpx gray;
  /*flex*/
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: nowrap;
  align-items: stretch;
}

.ticketLeftInfo {
  flex: 1 0 auto;
  margin: 15rpx;
  /*flex*/
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: flex-start;
}

.fromToInfo {
  font-weight: bold;
  font-size: 18px;
}

.dateInfo {
  font-size: 15px;
}

.ticketRightInfo {
  flex: 0 0 auto;
  margin: 15rpx;
  /*flex*/
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  flex-wrap: nowrap;
  align-items: flex-start;
}

.ticketPrice {
  flex: 0 0 auto;
  font-size: 16px;
  margin-right: 10rpx;
  background-color: #fda;
  text-decoration: line-through;
}

.ticketCount {
  flex: 0 0 auto;
  font-size: 15px;
  margin-right: 10rpx;
}

.cutButton {
  flex: 0 0 150rpx;
  background-color: #f80;
  /*flex*/
  display: flex;
  flex-direction: center;
  align-items: center;
}

.cutButtonText {
  height: auto;
  color: white;
  text-align: center;
  font-size: 16px;
}

